menuconfig SI3474
	bool "Si3474 PoE PSE Device"
	default y
	select I2C
	help
	  Enable driver for Si3474 device.

if SI3474

choice SI3474_TRIGGER_MODE
	prompt "Trigger mode"
	default SI3474_TRIGGER_GLOBAL_THREAD
	help
	  Specify the type of triggering to be used by the driver.

config SI3474_TRIGGER_NONE
	bool "No trigger"

config SI3474_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select SI3474_TRIGGER

endchoice

config SI3474_TRIGGER
	bool

config SI3474_THREAD_PRIORITY
	int "Thread priority"
	depends on SI3474_TRIGGER_GLOBAL_THREAD
	default 12
	help
	  Priority of thread used by the driver to handle interrupts.

config SI3474_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on SI3474_TRIGGER_GLOBAL_THREAD
	default 2048
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # SI3474
