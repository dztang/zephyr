# TI ADCXX1C I2C Voltage sensor configuration options

# Copyright (c) 2024 Bert Outtier
#
# SPDX-License-Identifier: Apache-2.0

menuconfig ADCXX1C
	bool "ADCxx1C voltage sensor"
	default y
	depends on DT_HAS_TI_ADCXX1C_ENABLED
	select I2C
	help
	  Enable I2C-based driver for ADCXX1C voltage sensor.

if ADCXX1C

choice ADCXX1C_TRIGGER_MODE
	prompt "Trigger mode"
	default ADCXX1C_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config ADCXX1C_TRIGGER_NONE
	bool "No trigger"

config ADCXX1C_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ADCXX1C_TRIGGER

config ADCXX1C_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ADCXX1C_TRIGGER

endchoice

config ADCXX1C_TRIGGER
	bool

config ADCXX1C_THREAD_PRIORITY
	int "Thread priority"
	depends on ADCXX1C_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ADCXX1C_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ADCXX1C_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ADCXX1C
