# ICM42370 Three-Axis Motion Tracking device configuration options
#
# Copyright (c) 2024 TDK Invensense
#
# SPDX-License-Identifier: Apache-2.0

menuconfig ICM42370
	bool "ICM42370 Three-Axis Motion Tracking Device"
	default y
	depends on DT_HAS_INVENSENSE_ICM42370_ENABLED
	select I2C
	help
	  Enable driver for ICM42370 I2C-based three-axis motion tracking device.

if ICM42370

choice ICM42370_TRIGGER_MODE
	prompt "Trigger mode"
	default ICM42370_TRIGGER_GLOBAL_THREAD
	help
	  Specify the type of triggering to be used by the driver.

config ICM42370_TRIGGER_NONE
	bool "No trigger"

config ICM42370_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ICM42370_TRIGGER

config ICM42370_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ICM42370_TRIGGER

endchoice

config ICM42370_TRIGGER
	bool

config ICM42370_THREAD_PRIORITY
	int "Thread priority"
	depends on ICM42370_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ICM42370_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ICM42370_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ICM42370
