#include <zephyr/dt-bindings/led/led.h>

/ {
	aliases {
		led-strip = &bff_led_strip;
	};

	bff_led_strip: bff_led_strip {
		compatible = "worldsemi,ws2812-gpio";
		status = "okay";
		gpios = <&xiao_d 3 GPIO_ACTIVE_HIGH>;
		chain-length = <25>;
		color-mapping = <LED_COLOR_ID_GREEN
				 LED_COLOR_ID_RED
				 LED_COLOR_ID_BLUE>;
		reset-delay = <280>;
		frequency = <800000>;
	};
};
