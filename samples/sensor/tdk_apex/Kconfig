# Enable trigger to get APEX sensor data

config ICM42670_TRIGGER
	default y

choice ICM42670_TRIGGER_MODE
	default ICM42670_TRIGGER_OWN_THREAD
endchoice

# Enable APEX features support for the IMU device selected

config ICM42670_APEX
	default y

# Choose between :
# TDK_APEX_PEDOMETER, TDK_APEX_TILT, TDK_APEX_SMD or TDK_APEX_WOM

choice APEX_FEATURES
    default TDK_APEX_PEDOMETER
endchoice

source "Kconfig.zephyr"
